@model IEnumerable<Madlib>

<div class="container p-3">
<div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary">Choose a Mad Lib</h2>
    </div>
</div>
<br />
<br />

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="80%">@obj.Title</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="SinglePlayerGame" asp-route-Id="@obj.Id" asp-action="Start" class="btn btn-primary mx-2">
                                <i class="fas fa-edit"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No madlibs to choose from at this time. Try again later!</p>
}
</div>