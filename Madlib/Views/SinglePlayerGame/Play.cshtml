@model SinglePlayerGameFilledBlank


<form method="post" asp-action="PlayPost">
    <input asp-for="Id" hidden />
    <input asp-for="SinglePlayerGameId" hidden />
    <input asp-for="CategoryId" hidden />
    <input asp-for="MadlibBlankIndex" hidden />
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Fill in the blank</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Answer">@Model.Category.Description</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Answer" type="text" placeholder="@Model.Category.Example" class="form-control" autocomplete="off" autofocus/>
                        <span asp-validation-for="Answer" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Next" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
